<div>
    <%- partial('../../partials/navbar.ejs') %>
    <div style="background-color: rgb(238, 238, 238); 
        padding: 24px;">
        <!-- Vue.js -->
        <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
        <style>
            [v-cloal] { display: none; }
            .modal-container {
                width: 100%; height: 100%;
                padding-top: 200px;
                position: fixed;
                top: 0; left: 0;
                background-color: rgba(0, 0, 0, 0.8);
            }
            .modal-form {
                margin: auto; background-color: white;
                width: 50%; padding: 16px;
                border-radius: 6px;
            }
            .tomato {
                background-color: tomato;
            }
            .blue {
                background-color: dodgerblue;
            }
            .gray {
                background-color: darkgray;
            }
        </style>
        <div id="app" v-cloak>
            <div v-if="shouldShowDeleteConfirmation" class="modal-container">
                <div class="modal-form"> 
                    <div> 
                        Are you sure you want to delete this post?
                    </div>
                    <div style="margin-top: 16px; display: flex;"> 
                        <div style="flex: 1;"></div>
                        <button v-on:click="handleCancel()" style="margin-right: 16px;
                            background-color: transparent; border-radius: 6px;
                            height: 35px; width: 80px;"> Cancel </button>
                        <button :disabled="isDeletingPost"
                            v-on:click="handleConfirmDelete()" 
                            v-bind:class="[isDeletingPost ? 'gray' : 'tomato']"
                            style="color: white; border-radius: 6px;
                            height: 35px; width: 80px; font-weight: 500;"> Delete </button>
                    </div>
                </div>
            </div>
            <div v-if="shouldShowCreatePost" class="modal-container"> 
                <div class="modal-form">
                    <div style="font-weight:500;">
                        Create Post
                    </div>
                    <textarea style="height: 100px; width: 100%; 
                        border: solid 1px darkgray; margin: 12px 0px;
                        border-radius: 6px; font-size: 14px;
                        padding: 12px;"
                        v-model="postBodyText"
                        placeholder="Enter post body here.."></textarea>
                    <input v-on:change="handleFileChange" type="file">
                    <img style="max-width: 25%; margin-top: 12px;" :src="postFileImageSource">
                    <div style="margin-top: 16px; display: flex; height: 35px;">
                        <div style="flex: 1;"></div>
                        <button v-on:click="shouldShowCreatePost=false" 
                            style="margin-right: 16px; background-color: transparent; border-radius: 6px;
                            width: 80px;"> Cancel </button>
                        <button :disabled="isCreatingPost"
                            v-on:click="handleCreatePost()"
                            v-bind:class="[isCreatingPost ? 'gray' : 'blue']"
                            style="border-radius: 6px;
                            font-weight: 500; color: white; width: 80px;"> Create </button>
                    </div>
                </div>
            </div>
            <div style="margin-bottom: 16px; background-color: white; border-radius: 6px; height: 40px;">
                <button v-on:click="shouldShowCreatePost=true"
                    style="font-weight: bold; width: 100%; height: 100%;
                    background-color: transparent; border-color: transparent;"> Create Post </button>
            </div> 
            <div v-for="p in posts">
                <%- partial('../../partials/post.ejs') %>
            </div>
        </div>
        <%- /* Expose locals as 'window.SAILS_LOCALS' :: */ exposeLocalsToBrowser({keys: ['allPosts']}) %>
        <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
        <script>
            const App = new Vue({
                el: "#app",
                data: {
                    posts: window.SAILS_LOCALS.allPosts,
                    shouldShowDeleteConfirmation: false,
                    shouldShowCreatePost: false,
                    selectedPostToDelete: null,
                    isDeletingPost: false,
                    isCreatingPost: false,
                    postBodyText: null,
                    postFileImageSource: null,
                    selectedFile: null,
                },
                methods: {
                    handleDeletePost: async function(post) {
                        this.selectedPostToDelete = post
                        this.shouldShowDeleteConfirmation = true
                        return 
                    },
                    toLocale: function(createdAt) {
                        return new Date(createdAt).toLocaleTimeString() + " " + new Date(createdAt).toLocaleDateString()
                    },
                    handleCancel: function() {
                        this.shouldShowDeleteConfirmation = false
                    },
                    handleConfirmDelete: async function() {
                        const postId = this.selectedPostToDelete.id
                        // axios.delete('/post/' + postId)
                        try {
                            this.isDeletingPost = true
                            await axios.delete(`/post/${postId}`)
                            this.shouldShowDeleteConfirmation = false
                            this.posts = this.posts.filter(p=> {
                                return p.id != this.selectedPostToDelete.id
                            })
                            this.isDeletingPost = false
                        } catch (err) {
                            console.error(err.toString())
                        }
                    },
                    handleFileChange: function(event) {
                        this.selectedFile = event.target.files[0]
                        this.postFileImageSource = window.URL.createObjectURL(this.selectedFile)
                    },
                    handleCreatePost: async function() {
                        this.isCreatingPost = true
                        const formData = new FormData()
                        formData.append("postBody", this.postBodyText)
                        formData.append("imagefile", this.selectedFile)
                        try {
                            await axios.post('/post', formData)
                            location.reload()
                        } catch (err) {
                            this.isCreatingPost = false
                            console.error(err)
                        }
                    }
                }
            })
        </script>
    </div>
</div>